        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
var balance = current.weekly_timecard.required_hours;

var ga = new GlideAggregate('x_42072_expense_ma_expense');

ga.addQuery('weekly_timecard', current.weekly_timecard.sys_id);

ga.addQuery('state', 3).addOrCondition('state', 10);

ga.groupBy('weekly_timecard');

ga.addAggregate('SUM', 'worktime');

ga.query();

 

if(ga.next()){

               balance = balance - parseFloat(ga.getAggregate('SUM', 'worktime'));

}

	gs.addInfoMessage(balance);
 

var wtc = new GlideRecord('x_42072_expense_ma_weekly_timecard');

if(wtc.get(current.weekly_timecard.sys_id)){

               wtc.balance = balance;

               wtc.update();

}

 
})(current, previous);]]></script>
