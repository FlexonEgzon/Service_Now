        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var balance = 0;
    var ga = new GlideAggregate('x_42072_expense_ma_weekly_timecard');
    ga.addQuery('user_timecard', current.user_timecard.sys_id);
    ga.groupBy('user_timecard');
    ga.addAggregate('SUM', 'balance');
    ga.query();

    if(ga.next()){
        balance +=  parseFloat(ga.getAggregate('SUM', 'balance'));
    }

    var utc = new GlideRecord('x_42072_expense_ma_usertimecard');
    if(utc.get(current.user_timecard.sys_id)){
        utc.balance = balance;
        utc.update();
    }

})(current, previous);]]></script>
